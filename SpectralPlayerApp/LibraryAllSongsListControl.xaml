<UserControl x:Class="SpectralPlayerApp.LibraryAllSongsListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpectralPlayerApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <ListBox x:Name="LibraryListView">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="MusicLibraryLib.Song" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="30" Margin="10" Text="{Binding Path=Name}"/>
                            <TextBlock Width="30" Margin="10" Text="{Binding Path=Artist}"/>
                            <TextBlock Width="30" Margin="10" Text="{Binding Path=AlbumName}"/>
                            <TextBlock Width="30" Margin="10" Text="{Binding Path=Year}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
