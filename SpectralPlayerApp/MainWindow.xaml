<Window x:Class="SpectralPlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectralPlayerApp"
        mc:Ignorable="d"
        Title="Spectral Player" Height="600" Width="900">
    <DockPanel> <!-- Top level container -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Test"></MenuItem>
        </Menu>
        <Grid> <!-- Body of player -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="60*"/>
            </Grid.ColumnDefinitions>
            <!-- Library section -->
            <Grid Grid.Column="0"
                     x:Name="LibraryDock"> 
            
            </Grid>
            <!-- Music Player section -->
            <Grid Grid.Column="1"
                     x:Name="MusicControllerDock">

            </Grid>
        </Grid>
    </DockPanel>
</Window>
