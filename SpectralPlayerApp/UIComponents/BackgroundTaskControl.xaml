<UserControl x:Class="SpectralPlayerApp.UIComponents.BackgroundTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpectralPlayerApp.UIComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel DockPanel.Dock="Top" x:Name="BackgroundTaskDockPanel">
        <Label x:Name="BackgroundTaskLabel" Content="Text" Foreground="{StaticResource Dark_FontBrush}"/>
        <ProgressBar x:Name="BackgroundTaskProgressBar" IsIndeterminate="True"/>
    </DockPanel>
</UserControl>
